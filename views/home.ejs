<%- include('partials/header') -%>

<h1>Home</h1>

<p> <%= homeStartingContent %> </p>

<% posts.forEach((post) => { %>
    <h3> <%= post.title %> </h3>
    <p> 
      <%= post.postBody.substring(0, 140) + " ... " %>
      <a href="/posts/<%= post.title %>">Read More</a>
    </p>
<% }) %>

<a href="/compose" class="btn btn-primary">Add Journal</a>

